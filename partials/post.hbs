{{!--
Re-usable card for linking to posts
--}}

<article class="grid grid-cols-12 py-4 items-center">
    <div class="col-span-2 text-xs font-semibold text-emerald-700 dark:text-emerald-300">
        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
    </div>
    <div class="col-span-10 antialiased">
        <h2 class="text-lg"><a href="{{url}}">{{title}}</a></h2>
        <div class="text-xs text-slate-700 dark:text-slate-300 hidden md:block">- {{reading_time}}</div>
    </div>
</article>