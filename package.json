{
  "name": "emerald",
  "version": "1.3.3",
  "private": true,
  "description": "Theme for Ghost publishing platform",
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "bugs": "https://github.com/imgarylai/emerald/issues",
  "repository": "github:imgarylai/emerald",
  "license": "MIT",
  "author": {
    "name": "Gary Lai",
    "email": "garylai1990@gmail.com",
    "url": "https://laigary.com/"
  },
  "contributors": [
    {
      "name": "Gary Lai",
      "email": "garylai1990@gmail.com",
      "url": "https://laigary.com/"
    }
  ],
  "scripts": {
    "build": "snowpack build",
    "clean": "rimraf dist",
    "dev": "snowpack build --watch",
    "test": "gscan .",
    "zip": "npm run build && cd dist && zip -r release .",
    "postversion": "npm run zip"
  },
  "config": {
    "card_assets": true,
    "custom": {
      "title_font": {
        "type": "select",
        "options": [
          "Modern sans-serif",
          "Elegant serif"
        ],
        "default": "Modern sans-serif"
      },
      "body_font": {
        "type": "select",
        "options": [
          "Modern sans-serif",
          "Elegant serif"
        ],
        "default": "Elegant serif"
      },
      "color_scheme": {
        "type": "select",
        "options": [
          "Light",
          "Dark",
          "Auto"
        ],
        "default": "Light"
      },
      "content_api_key_for_search": {
        "type": "text"
      },
      "disqus_shortname": {
        "type": "text"
      },
      "email_signup_for_logged_out_visitors": {
        "type": "select",
        "options": [
          "Footer",
          "Bottom of post",
          "None"
        ],
        "default": "Footer",
        "group": "post"
      },
      "email_signup_text": {
        "type": "text",
        "default": "Sign up for more like this.",
        "group": "post"
      }
    },
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "posts_per_page": 10
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@commitlint/prompt": "16.2.3",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.1.0",
    "@semantic-release/npm": "9.0.2",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@snowpack/plugin-postcss": "1.4.3",
    "@tailwindcss/aspect-ratio": "0.4.0",
    "@tailwindcss/line-clamp": "0.3.1",
    "@tailwindcss/typography": "0.5.2",
    "autoprefixer": "10.4.4",
    "gscan": "4.26.1",
    "postcss": "8.4.12",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.5",
    "snowpack": "3.8.8",
    "snowpack-plugin-content-replace": "1.0.0",
    "tailwindcss": "3.0.23"
  },
  "engines": {
    "ghost": ">=4.0.0"
  },
  "demo": "https://laigary.com"
}
